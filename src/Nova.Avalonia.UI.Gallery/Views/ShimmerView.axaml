<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Nova.Avalonia.UI.Controls;assembly=Nova.Avalonia.UI"
             xmlns:vm="using:Nova.Avalonia.UI.Gallery.ViewModels"
             mc:Ignorable="d"
             x:Class="Nova.Avalonia.UI.Gallery.Views.ShimmerView"
             x:DataType="vm:ShimmerViewModel">
    <ScrollViewer>
        <StackPanel Spacing="20" Margin="20">

            <TextBlock Text="The shimmer automatically detects TextBlocks, Borders, Ellipses, etc. and creates matching skeleton shapes!" 
                       Theme="{StaticResource BodyTextBlockStyle}" 
                       Opacity="0.6"
                       TextWrapping="Wrap"/>

            <CheckBox Name="GlobalToggle"
                      Content="Show Shimmer (IsLoading)"
                      IsChecked="True"
                      HorizontalAlignment="Center"
                      FontSize="16"
                      FontWeight="Bold" />

            <!-- Multiple TextBlocks -->
            <Border BorderBrush="{DynamicResource AccentMutedBrush}" BorderThickness="2" Padding="15" CornerRadius="8">
                <StackPanel Spacing="10">
                    <TextBlock Text="Multiple TextBlocks"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource AccentBrush}" />
                    
                    <controls:Shimmer IsLoading="{Binding #GlobalToggle.IsChecked}">
                        <StackPanel Spacing="10">
                            <TextBlock Text="First line of text here" FontSize="16" />
                            <TextBlock Text="Second line of text" FontSize="14" />
                            <TextBlock Text="Third line is shorter" FontSize="12" />
                        </StackPanel>
                    </controls:Shimmer>
                    
                </StackPanel>
            </Border>

            <!-- Profile Card with Avatar -->
            <Border BorderBrush="{DynamicResource AccentMutedBrush}" BorderThickness="2" Padding="15" CornerRadius="8">
                <StackPanel Spacing="10">
                    <TextBlock Text="Profile card"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource AccentBrush}" />
                    
                    <controls:Shimmer IsLoading="{Binding #GlobalToggle.IsChecked}">
                        <Border BorderBrush="{DynamicResource CardBorderBrush}" 
                                BorderThickness="1" 
                                Padding="15" 
                                CornerRadius="8"
                                HorizontalAlignment="Stretch">
                            <Grid ColumnDefinitions="Auto,*">
                                <!-- Avatar (Ellipse) -->
                                <Ellipse Grid.Column="0" 
                                         Width="60" 
                                         Height="60" 
                                         Fill="{DynamicResource AccentBrush}"
                                         Margin="0, 0, 12, 0" />
                                
                                <!-- Text info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                                    <TextBlock Text="John Doe" 
                                               FontSize="18" 
                                               FontWeight="Bold" />
                                    <TextBlock Text="Software Engineer" 
                                               FontSize="14" 
                                               Foreground="{DynamicResource SecondaryTextBrush}" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </controls:Shimmer>

                </StackPanel>
            </Border>

            <!-- Card with Rounded Corners -->
            <Border BorderBrush="{DynamicResource AccentMutedBrush}" BorderThickness="2" Padding="15" CornerRadius="8">
                <StackPanel Spacing="10">
                    <TextBlock Text="Rounded border"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource AccentBrush}" />
                    
                    <controls:Shimmer IsLoading="{Binding #GlobalToggle.IsChecked}">
                        <Border Background="{DynamicResource CardBackgroundBrush}" 
                                BorderBrush="{DynamicResource CardBorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="16"
                                Padding="20"
                                HorizontalAlignment="Stretch">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Card Title" 
                                           FontSize="18" 
                                           FontWeight="Bold" />
                                <TextBlock Text="Card description goes here" 
                                           FontSize="14" />
                            </StackPanel>
                        </Border>
                    </controls:Shimmer>
                    
                </StackPanel>
            </Border>

            <!-- Complex Layout -->
            <Border BorderBrush="{DynamicResource AccentMutedBrush}" BorderThickness="2" Padding="15" CornerRadius="8">
                <StackPanel Spacing="10">
                    <TextBlock Text="Complex layout"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource AccentBrush}" />
                    
                    <controls:Shimmer IsLoading="{Binding #GlobalToggle.IsChecked}">
                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                            <!-- Avatar -->
                            <Ellipse Grid.Column="0" 
                                     Grid.RowSpan="2"
                                     Width="50" 
                                     Height="50" 
                                     Fill="{DynamicResource AccentBrush}" 
                                     Margin="0, 0, 12, 0"/>
                            
                            <!-- Name -->
                            <TextBlock Grid.Column="1" 
                                       Grid.Row="0"
                                       Text="User Name" 
                                       FontSize="16" 
                                       FontWeight="Bold" />
                            
                            <!-- Status -->
                            <TextBlock Grid.Column="1" 
                                       Grid.Row="1"
                                       Text="Online" 
                                       FontSize="12" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0, 4, 0, 0"/>
                            
                            <!-- Button -->
                            <Button Grid.Column="2" 
                                    Grid.RowSpan="2"
                                    Content="Follow"
                                    VerticalAlignment="Center"
                                    Margin="12, 0"/>
                        </Grid>
                    </controls:Shimmer>
                    
                </StackPanel>
            </Border>

            <!-- List of Items -->
            <Border BorderBrush="{DynamicResource AccentMutedBrush}" BorderThickness="2" Padding="15" CornerRadius="8">
                <StackPanel Spacing="10">
                    <TextBlock Text="List items"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource AccentBrush}" />
                    
                    <controls:Shimmer IsLoading="{Binding #GlobalToggle.IsChecked}">
                        <StackPanel Spacing="10">
                            <!-- Item 1 -->
                            <Border BorderBrush="{DynamicResource CardBorderBrush}" 
                                    BorderThickness="1" 
                                    Padding="10" 
                                    CornerRadius="5">
                                <Grid ColumnDefinitions="Auto,*">
                                    <Ellipse Width="40" Height="40" Fill="{DynamicResource AccentBrush}" />
                                    <StackPanel Grid.Column="1" Margin="10,0" VerticalAlignment="Center">
                                        <TextBlock Text="Item One" FontWeight="Bold" />
                                        <TextBlock Text="Description" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Item 2 -->
                            <Border BorderBrush="{DynamicResource CardBorderBrush}" 
                                    BorderThickness="1" 
                                    Padding="10" 
                                    CornerRadius="5">
                                <Grid ColumnDefinitions="Auto,*">
                                    <Ellipse Width="40" Height="40" Fill="{DynamicResource AccentBrush}" />
                                    <StackPanel Grid.Column="1" Margin="10,0" VerticalAlignment="Center">
                                        <TextBlock Text="Item Two" FontWeight="Bold" />
                                        <TextBlock Text="Description" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Item 3 -->
                            <Border BorderBrush="{DynamicResource CardBorderBrush}" 
                                    BorderThickness="1" 
                                    Padding="10" 
                                    CornerRadius="5">
                                <Grid ColumnDefinitions="Auto,*">
                                    <Ellipse Width="40" Height="40" Fill="{DynamicResource AccentBrush}" />
                                    <StackPanel Grid.Column="1" Margin="10,0" VerticalAlignment="Center">
                                        <TextBlock Text="Item Three" FontWeight="Bold" />
                                        <TextBlock Text="Description" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </controls:Shimmer>
                    
                </StackPanel>
            </Border>

            <!-- Buttons -->
            <Border BorderBrush="{DynamicResource AccentMutedBrush}" BorderThickness="2" Padding="15" CornerRadius="8">
                <StackPanel Spacing="10">
                    <TextBlock Text="Buttons"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource AccentBrush}" />
                    
                    <controls:Shimmer IsLoading="{Binding #GlobalToggle.IsChecked}">
                        <WrapPanel>
                            <Button Content="Primary" Margin="5" />
                            <Button Content="Secondary" Margin="5" />
                            <Button Content="Action" Margin="5" />
                        </WrapPanel>
                    </controls:Shimmer>
                    
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
