{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "Nova.Avalonia.UI/Nova.Avalonia.UI.csproj"
          ]
        }
      ],
      "dest": "api",
      "properties": {
        "Configuration": "Release",
        "UsedAvaloniaProducts": ""
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Nova.Avalonia.UI",
      "_appTitle": "Nova.Avalonia.UI",
      "_enableSearch": true,
      "pdf": true
    }
  }
}
